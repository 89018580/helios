                       3 3 3 3 3 3 3 3 3 3
                       3 3 3 3 3 3 3 3 3 3" />
<!-- Defition of the internal lattice - universe 5/9 -->
  <lattice id="8" type="x-z" dimension="10 10" pitch="0.2 0.2" 
           universes= "4 4 4 4 4 4 4 4 4 4
                       4 4 4 4 4 4 4 4 4 4
                       4 4 4 4 4 4 4 4 4 4
                       4 4 4 4 4 4 4 4 4 4
                       4 4 4 4 4 4 4 4 4 4
                       4 4 4 4 4 4 4 4 4 4
                       4 4 4 4 4 4 4 4 4 4
                       4 4 4 4 4 4 4 4 4 4
                       4 4 4 4 4 4 4 4 4 4
                       4 4 4 4 4 4 4 4 4 4" />

<!-- Defition of dummy infinite cell - universe 3 -->
  <cell id="108" universe="9" material="fuel" />

<!-- Definition of the main lattice - universe 4 -->
  <lattice id="10" type="x-z" dimension="4 4" pitch="2.0 2.0" 
           universes= "9 9 9 9
                       9 5 6 9
                       9 7 8 9
                       9 9 9 9" />
  
<!-- Definition of Cells -->
  <cell id="1" fill="10" surfaces="5 -6 7 -8" />

<!-- Surface (with vacuum boundary conditions) -->

  <surface id="5" type="pz" coeffs="-2.2" boundary="vacuum" />
  <surface id="6" type="pz" coeffs=" 2.2" boundary="vacuum" />
  <surface id="7" type="px" coeffs="-2.2" boundary="vacuum" />
  <surface id="8" type="px" coeffs=" 2.2" boundary="vacuum" />

</geometry>
